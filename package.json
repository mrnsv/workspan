{
  "name": "workspan",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "test-punch": "tsx test-punch.ts",
    "test-hours": "tsx test-hours-system.ts",
    "start": "tsx apps/backend/src/index.ts",
    "dev": "tsx watch apps/backend/src/index.ts",
    "get-token": "tsx apps/automation/src/get-token.ts",
    "update-backend": "tsx apps/automation/src/update-backend-cookie.ts",
    "refresh-cookie": "npm run get-token && npm run update-backend",
    "test-config": "tsx apps/automation/test-config.ts",
    "install-browsers": "playwright install",
    "install-deps": "sudo npx playwright install-deps",
    "frontend:serve": "npx ng serve --project workspan-frontend --browser-target workspan-frontend:build:development --host 0.0.0.0 --port 4200",
    "frontend:build": "cd apps/frontend && npm run build",
    "frontend:test": "cd apps/frontend && npm run test",
    "frontend:watch": "cd apps/frontend && npm run watch",
    "dev:full": "concurrently \"npm run dev\" \"npm run frontend:serve\"",
    "ng": "ng"
  },
